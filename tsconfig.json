{
    "compilerOptions": {
      "baseUrl": ".",
      "rootDir": "src",
      "target": "es6",
      "lib": [
        "es6",
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "jsx": "preserve",
      "incremental": true,
      "types": [
        "cypress"
      ]
    },
    "include": [
      "src",
      "globals.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
